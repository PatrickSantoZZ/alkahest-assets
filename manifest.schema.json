{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://raw.githubusercontent.com/tera-alkahest/alkahest-assets/master/manifest.schema.json",
    "title": "Alkahest Assets Manifest",
    "type": "object",
    "definitions": {
        "asset": {
            "type": "object",
            "properties": {
                "name": {
                    "description": "File name of the asset.",
                    "type": "string"
                },
                "version": {
                    "description": "Client version of the asset.",
                    "type": "integer"
                },
                "patch": {
                    "description": "Client patch of the asset.",
                    "type": "integer"
                },
                "sha1": {
                    "description": "SHA-1 checksum of the asset.",
                    "type": "string"
                },
                "sha256": {
                    "description": "SHA-256 checksum of the asset.",
                    "type": "string"
                },
                "sha384": {
                    "description": "SHA-384 checksum of the asset.",
                    "type": "string"
                },
                "sha512": {
                    "description": "SHA-512 checksum of the asset.",
                    "type": "string"
                }
            },
            "required": [
                "name",
                "version",
                "patch",
                "sha1",
                "sha256",
                "sha384",
                "sha512"
            ]
        }
    },
    "properties": {
        "de": {
            "$ref": "#/definitions/asset"
        },
        "fr": {
            "$ref": "#/definitions/asset"
        },
        "na": {
            "$ref": "#/definitions/asset"
        },
        "ru": {
            "$ref": "#/definitions/asset"
        },
        "se": {
            "$ref": "#/definitions/asset"
        },
        "th": {
            "$ref": "#/definitions/asset"
        },
        "tw": {
            "$ref": "#/definitions/asset"
        },
        "uk": {
            "$ref": "#/definitions/asset"
        }
    }
}
